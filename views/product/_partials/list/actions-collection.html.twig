
{# Begin registry button #}
{% if items_in_registry is empty %}
{% set added = false %}
{% else %}
{% set added = true %}
{% endif %}
{% if registries is empty %}
<div class="col-sm-4 col-md-3 col-md-offset-3 col-lg-2 col-lg-offset-6">
    <button type="submit" name="action" value="registry" class="btn btn-block btn-registry">
        {% if added %}
        <i class="fa fa-check"></i>&nbsp;
        {% else %}
        <i class="fa fa-gift"></i>&nbsp;
        {% endif %}
        <span>Add to Registry</span>
    </button>
</div>
{% else %}
<div class="btn-group col-sm-4 col-md-3 col-md-offset-3 col-lg-2 col-lg-offset-6">
    <button type="submit" name="action" value="registry" class="btn btn-block btn-registry dropdown-toggle" data-toggle="dropdown">
        {% if added %}
        <i class="fa fa-check"></i>&nbsp;
        {% else %}
        <i class="fa fa-gift"></i>&nbsp;
        {% endif %}
        <span>Add to Registry</span>
    </button>
    <ul class="dropdown-menu" role="menu">
        {% for registry in registries %}
        <li><button type="submit" class="btn btn-link" name="action" value="registry/{{registry.id}}">Add to '{{registry.name}}'</button></li>
        {% endfor %}
    </ul>
</div>
{% endif %}
{# End registry button #}
{# Begin wishlist button #}
{% if items_in_wishlist is empty %}
{% set added = false %}
{% else %}
{% set added = true %}
{% endif %}
{% if wishlists is empty %}
